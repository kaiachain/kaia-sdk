{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": [
      "./src"
    ],
  },
  "exclude": [
    "dist",
    "example",
    "node_modules"
  ],
  "include": [
    "./src"
  ]
}